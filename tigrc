# Tig default configuration
#
# Please see 'man tigrc' for a complete reference.

# View settings
set main-view           = line-number:no,interval=5 id:yes date:default author:full commit-title:yes,graph,refs,overflow=no
set ignore-space        = no        # Enum: no, all, some, at-eol (diff)
set diff-context        = 3         # Number of lines to show around diff changes (diff)
set ignore-case         = yes       # Ignore case when searching?
set split-view-height   = 70%       # Height of the bottom view for horizontal splits
set vertical-split      = auto      # Enum: horizontal, vertical, auto; Use auto to
set split-view-width    = 70%       # Width of right-most view for vertical splits
set git-colors          = no

# User-defined commands
bind generic x      :toggle vertical-split      # Toggle vertical split

# Colors
color default white black normal
color cursor white magenta bold
color date cyan default
color delimiter cyan default
color line-number yellow default
color diff-header yellow default
color diff-index blue default
color diff-chunk magenta default
color "Reported-by:" green default
color graph-commit cyan default

